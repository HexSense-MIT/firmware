#include "HS_system.h"

void blink_led(GPIO_TypeDef* GPIOx, uint16_t GPIO_Pin, int interval) {
    // if interval > 0, blink
	if (interval) {
		HAL_GPIO_WritePin(GPIOx, GPIO_Pin, GPIO_PIN_SET);
		HAL_Delay();
	}
	// if interval == 0, always on
	else {
		;
	}
}
